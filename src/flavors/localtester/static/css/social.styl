.social
  border-radius: 2.5px;
  overflow: hidden;

.sharing
  display: flex;
  align-items center

.share-link
  float: none;
  margin-left: 0;
  width: 50%;

  a
    width: 100%
    transition: box-shadow 0.5s ease, background 0.5s ease

    &:hover
      box-shadow: 0px 1px 4px 0px rgba(black, 0.3) inset

.share-facebook
  a
    background: #385184 url(images/facebook-share.svg) center center no-repeat

    &:hover
      background-color: lighten(#385184, 20%)

.share-twitter
  a
    background: #1DA1F2 url(images/twitter-share.svg) center center no-repeat

    &:hover
      background-color: lighten(#1DA1F2, 20%)
