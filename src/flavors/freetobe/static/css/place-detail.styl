.place-title
	margin-top 3em
	margin-bottom 3em
	text-align center

.drag-marker-instructions,
.drag-marker-warning
	background-color lighten(#58CAE7, 75%)
	color #EF008C
	text-shadow none
	padding-top 3em
	padding-bottom 3em
	margin-bottom 4em

	position absolute
	top 1em
	left 1em
	right 1em

	// +above(960px)
	// 	top 50%
	// 	transform translateY(-50%)

@keyframes show-form-warnings
	0%
		display block
		opacity 0
		transform translateY(-100px)
	100%
		opacity 1
		transform translateX(0)

@keyframes hide-form-warnings
	99%
		transform translateY(-100px)
		opacity 0
	100%
		opacity 0
		display none

.show-form-warnings
	animation show-form-warnings 0.3s ease-in-out forwards

.hide-form-warnings
	animation hide-form-warnings 0.3s ease-in-out forwards

@keyframes show-form-items
	0%
		opacity 0
		transform translateY(-100px)
	100%
		opacity 1
		transform translateX(0)

@keyframes hide-form-items
	0%
		opacity 1
	100%
		opacity 0

.place-form-container
	opacity 0
	max-width 100%

.show-form-item
	opacity 0
	animation show-form-items 0.3s 0.4s ease-in-out forwards

