.drag-marker-instructions,
.drag-marker-warning
	background-color primary-color
	color #fff
	text-shadow none

.place-value-safety_rating
	&:before
		content "Safety rating: "
		font-weight bold

.place-value-description
	&:before
		content "Description: "
		font-weight bold

.place-value-rider_type
	&:before
		content "Rider type: "
		font-weight bold

#place-safety_rating
	display none

#fields-safety_rating
	display none

.place-form label[for=place-happy_feel],
  .place-form [name=happy_feel]
	display none

.place-form.happy label[for=place-happy_feel],
  .place-form.happy [name=happy_feel]
	display block

.place-form label[for=place-sad_feel],
  .place-form [name=sad_feel]
	display none

.place-form.sad label[for=place-sad_feel],
  .place-form.sad [name=sad_feel]
	display block

.place-form label[for=place-private-submitter_email],
  .place-form [name=private-submitter_email]
	display none

.place-form.location_updates-yesplease label[for=place-private-submitter_email],
  .place-form.location_updates-yesplease [name=private-submitter_email]
	display block

label
	small
		text-transform none
		display none
