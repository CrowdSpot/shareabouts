label
	small
		text-transform none
		display none

.place-form-section

	&.file, &.select
		text-align center

	&.text, &.textarea, &.file, .multi-checkboxes, &.select
		position relative
		padding-bottom 3em
		box-shadow 0px 1px 2px -2px rgba(black, 0.5)
		border-bottom 1px solid rgba(tertiary-color, 0.5)
		margin-bottom 3em

		&:after
			content ""
			width 20px
			height 20px
			background white
			border-bottom 1px solid tertiary-color
			border-right 1px solid tertiary-color
			position absolute
			left 50%
			bottom -11px
			transform translateX(-50%) rotate(45deg)
			// animation arrowAnimation 2s ease-in-out infinite

		label
			display block
			margin 1em 0

@keyframes arrowAnimation
	0%
		transform translateX(-50%) rotate(45deg)
	50%
		transform translateX(-50%) translateY(-10px) rotate(45deg)
	100%
		transform translateX(-50%) rotate(45deg)

.multi-checkbox, .multi-radio
	label
		display block
		text-align center
		margin-bottom 1em

.place-form
	input[type=text], input[type=email], textarea
		border none
		padding 1em
		border-radius 3px
		box-shadow 0 0 10px -5px rgba(black, 0.5) inset
		background-color rgba(tertiary-color, 0.5)

#fields-location_type
	margin-bottom 3em
