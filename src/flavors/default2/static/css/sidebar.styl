.spot-type-title
	font-size: 1.1em
	font-weight bold
	text-align center
	padding 1em
	color #434343
	background-color #E5E5E6
	border-bottom 2px solid #8C8C8C
	margin-bottom 1em
	
.recent-points
	a
		color #585A59
		text-decoration none
		float left
		border-top 1px solid #888
		border-bottom 1px solid #666
		padding 0.5em 0.5em 0.5em 0.75em
		width 100%
		box-sizing border-box

#colophon
	box-shadow inset 0 5px 10px -5px rgba(85, 85, 85, 0.5)

#ticker
	background white
	box-shadow 0px 0 10px rgba(85, 85, 85, 0.5)

#content
	
	+above(60em)
		box-shadow none
	
		> article
			background white
			box-shadow 0 0 20px rgba(black, 0.5)
			position relative
			left 0
			
			z-index 100
		
a.close-btn
	z-index 1
	background white
	box-shadow none
	right 100%
	// z-index -1
	margin-right 0px
	transition 0.5s background ease, 0.5s color ease
	
	+below(60em)
		width 60px
	
	&:hover
		background white
			
a.leaflet-control-layers-toggle, .leaflet-retina a.leaflet-control-layers-toggle
	background-image none
	background-size inherit
	width 96px
	height 30px
	text-decoration none
	
	
	&:before
		content: "Layers"
		display block
		color black
		font-weight bold
		padding 6px 10px 0 10px
			
.legend
	border-top 0
	padding-bottom 1em

.recent-points
	border-bottom 1px solid grey
	
#list-container
	background #eee

.list-toggle-btn,
  .list-toggle-btn:visited,
  .list-toggle-btn:link
	// background-color #FF00FF

.list-toggle-btn
	&:hover
		background-color #575958
		color #fff
		
.goog-te-gadget
	&:last-child
		display none
	.goog-te-combo
		&:last-child
			display none