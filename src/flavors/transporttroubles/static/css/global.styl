body, select, input, textarea
	color #555
	font-family "Roboto", "Proxima Nova", Arial, Helvetica, sans-serif

// #map
// 	&.leaflet-container
// 		font-size 14px/1.5

button-shadow = 0px 0px 0px rgba(0, 0, 0, 0.4) inset
button-shadow--hover = 0px 1px 4px 0px rgba(0, 0, 0, 0.3) inset

.btn,
.btn:visited,
.btn:link
	line-height 1.00
	padding 0.65em
	color white
	background-color primary-color
	box-shadow button-shadow
	font-weight 600
	border 0
	transition box-shadow 0.5s ease, background-color 0.5s ease

	&:hover
		// background-color lighten(primary-color, 15%)
		background #464847
		box-shadow button-shadow--hover

.btn-primary,
.btn-primary:visited,
.btn-primary:link
	background-color primary-color
	box-shadow button-shadow
	color #fff
	transition box-shadow 0.5s ease, background-color 0.5s ease

	// &.submit-btn
	// 	box-shadow button-shadow

	// &:hover
	// 	box-shadow 0px 0px 1px rgba(0, 0, 0, 0.2)

.btn-secondary,
.btn-secondary:visited,
.btn-secondary:link
	box-shadow button-shadow
	background-color primary-color
	color white

	// &:hover
	// 	box-shadow 0px 0px 1px rgba(0, 0, 0, 0.2)

a, a:active, a:visited
	color primary-color

#powered-by a
	background-image url(images/crowdspot-logo.svg)
	background-position 0px 4px

.small-intro-text
	font-size 13px
