.drag-marker-instructions,
.drag-marker-warning
	background-color primary-color
	color #fff
	text-shadow none

.place-value-safety_rating
	&:before
		content "Safety rating: "
		font-weight bold

.place-value-description
	&:before
		content "Description: "
		font-weight bold

.place-value-rider_type
	&:before
		content "Rider type: "
		font-weight bold

#place-safety_rating
	display none

#fields-safety_rating
	display none


.place-form label[for=place-location_train_trouble],
.place-form [name=location_train_trouble]
	display none

.place-form.trainspot label[for=place-location_train_trouble],
.place-form.trainspot [name=location_train_trouble]
	display block


.place-form label[for=place-location_tram_trouble],
.place-form [name=location_tram_trouble]
	display none

.place-form.tramspot label[for=place-location_tram_trouble],
.place-form.tramspot [name=location_tram_trouble]
	display block


.place-form label[for=place-location_bus_trouble],
.place-form [name=location_bus_trouble]
	display none

.place-form.busspot label[for=place-location_bus_trouble],
.place-form.busspot [name=location_bus_trouble]
	display block


.place-form label[for=place-private-submitter_email],
  .place-form [name=private-submitter_email]
	display none

.place-form.location_updates-yesplease label[for=place-private-submitter_email],
  .place-form.location_updates-yesplease [name=private-submitter_email]
	display block

label
	small
		text-transform none
		display none
