.recent-points
	a
		color #585A59
		text-decoration none
		float left
		border-top 1px solid #888
		border-bottom 1px solid #666
		padding 0.5em 0.5em 0.5em 0.75em
		width 100%
		-webkit-box-sizing border-box
		-moz-box-sizing border-box
		box-sizing border-box

#colophon
	box-shadow inset 0 5px 10px rgba(85, 85, 85, 0.25)

#ticker
	background #B4B4B4
	box-shadow -5px 0 10px rgba(85, 85, 85, 0.5)

#content
	background #CDCDCD
	box-shadow none
	article
		box-shadow 0 0 20px rgba(black, 0.5)
		position relative
		z-index 10
	
	// +above('m')
	// 	background pink

a
	&.close-btn
		background #CDCDCD
		box-shadow none
		z-index 0
		margin-right 0px
		
		// +above('m')
		// 	background pink
			
	&.leaflet-control-layers-toggle
		background-image none
		background-size inherit
		width 96px
		height 30px
		text-decoration none
		
		
		&:before
			content: "Layers"
			display block
			color black
			font-weight bold
			padding 6px 10px 0 10px
			

#list-container
	background #eee

.list-toggle-btn,
  .list-toggle-btn:visited,
  .list-toggle-btn:link
	background-color #FF00FF

.list-toggle-btn
	&:hover
		background-color #575958
		color #fff
		
.goog-te-gadget
	&:last-child
		display none
	.goog-te-combo
		&:last-child
			display none